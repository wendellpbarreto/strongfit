/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
    <?php if ($this->getLayer()->getState()->getFilters()): ?>
        <div class="block block-currently-shopping">  
            <?php echo $this->getStateHtml() ?>
            <div class="actions"><a class="btn-clear" href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear') ?></a></div>
        </div>
    <?php endif; ?>
    <?php if($this->canShowOptions()): ?>
        <?php $_filters = $this->getFilters() ?>
        <?php foreach ($_filters as $_filter): ?>
            <?php if($_filter->getItemsCount()): ?>
                <div class="block block-layered-nav block-layered-<?php echo preg_replace('#[^a-z0-9]#', '_', strtolower($_filter->getName())) ?>">
                    <div class="block-title">
                        <strong><span>
                            <?php echo $this->__($_filter->getName()) ?>
                        </span></strong>
                    </div>
                    <div class="block-content"><?php echo $_filter->getHtml() ?></div>
                </div>
            <?php endif; ?>
        <?php endforeach; ?> 
        <script type="text/javascript">decorateDataList('narrow-by-list')</script>
    <?php endif; ?>
<?php endif; ?>


/* @var $this Mage_Reports_Block_Product_Viewed */

$helper = $this->helper('athlete/image');
$imgX = 50;
$imgY = $helper->calculateHeight($imgX);
?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
        <ol id="recently-viewed-items">        
			<?php foreach ($_products as $_item): ?>
				<li class="item clearfix">
					<a href="<?php echo $this->getProductUrl($_item) ?>" title="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>" class="product-image">
						<?php echo '<img src="'. $this->helper('catalog/image')->init($_item, 'thumbnail')->resize($imgX,$imgY)
							.'" data-srcX2="'. $this->helper('catalog/image')->init($_item, 'thumbnail')->resize($imgX*2, $imgY*2)
							.'" width="'.$imgX.'" height="'.$imgY.'" alt="'.$this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name').'" />'; ?>
					</a>
					<p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a></p>
				</li>
			<?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>